<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="tennisclub"
            type="com.example.frederikdeprez.tennistime.data.Tennisclub" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/tennisclub_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/tennisclub_button"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/tennis_ball_net_background"
            android:alpha="0.8"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tennisclub_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:maxLines="3"
            android:textColor="@color/darkerblue"
            style="@style/TextAppearance.MaterialComponents.Headline4"
            android:clickable="false"
            android:text="@{tennisclub.name}" />

    </com.google.android.material.card.MaterialCardView>
</layout>